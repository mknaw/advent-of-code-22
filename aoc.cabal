extra-source-files: CHANGELOG.md

common common-options
    default-language:    Haskell2010
    ghc-options:         -Wall
                         -Wcompat
                         -Widentities
                         -Wincomplete-uni-patterns
                         -Wincomplete-record-updates
                         -Wno-partial-type-signatures

    build-depends:
        base ^>=4.14.3.0
        , ansi-terminal ==0.11.*
        , containers ==0.6.*
        , criterion ==1.6.*
        , directory ==1.3.*
        , filepath ==1.4.*
        , megaparsec ==9.2.*
        , split ==0.2.*
        , text ==1.2.*
    default-extensions:
        LambdaCase
        OverloadedStrings

library
    import:           common-options
    hs-source-dirs:   src
    exposed-modules:
        Puzzles.Day01
        Puzzles.Day02
        Puzzles.Day03
