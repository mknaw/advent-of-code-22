        -- Puzzles.Day23
        -- Puzzles.Day24
        -- Puzzles.Day25
        Puzzles.Map
        Puzzles.Puzzles
        Lib.Parse
        Lib.Utils

executable aoc-exe
    import:           common-options
    main-is:          aoc.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:
        aoc
        , optparse-applicative
    hs-source-dirs:   app
    default-language: Haskell2010
