extra-source-files: CHANGELOG.md

common common-options
    default-language:    Haskell2010
    ghc-options:         -Wall
                         -Wcompat
                         -Widentities
                         -Wincomplete-uni-patterns
                         -Wincomplete-record-updates
                         -Wno-unused-do-bind

    build-depends:
        base ^>=4.14.3.0
        , ansi-terminal ==0.11.*
        , containers ==0.6.*
        , criterion ==1.6.*
        , directory ==1.3.*
        , fgl ==5.8.*
        , filepath ==1.4.*
        , fin ==0.2.*
        , linear ==1.22
        , lens ==5.2
        , matrix ==0.3.*
        , megaparsec ==9.2.*
        , monad-loops ==0.4.*
        , mtl ==2.2.*
        , listsafe ==0.1.0.*
        , split ==0.2.*
        , Stack ==0.4.*
        , text ==1.2.*
        , vector ==0.13.*
    default-extensions:
        ApplicativeDo
        LambdaCase
        NamedFieldPuns
        OverloadedStrings

library
    import:           common-options
    hs-source-dirs:   src
    exposed-modules:
        Lib.Console
        Lib.Counter
        Lib.Matrix
        Lib.Parse
        Lib.Utils
        Lib.Utils.Geometry
        Puzzles.Day01
        Puzzles.Day02
        Puzzles.Day03
        Puzzles.Day04
        Puzzles.Day05
        Puzzles.Day06
        Puzzles.Day07
        Puzzles.Day08
        Puzzles.Day09
        Puzzles.Day10
        Puzzles.Day11
        Puzzles.Day12
        Puzzles.Day13
        Puzzles.Day14
        Puzzles.Day15
        Puzzles.Day16
        Puzzles.Day17
        Puzzles.Day18
        Puzzles.Day19
        Puzzles.Day20
        Puzzles.Day21
        Puzzles.Day22
        Puzzles.Day23
        -- Puzzles.Day24
        -- Puzzles.Day25
        Puzzles.Map
        Puzzles.Puzzles
        Puzzles.Test

executable aoc-exe
    import:           common-options
    main-is:          aoc.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:
        aoc
        , optparse-applicative
    hs-source-dirs:   app
    default-language: Haskell2010
